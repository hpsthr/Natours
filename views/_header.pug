header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
            //- form.nav__search
            //-     button.nav__search-btn
            //-         svg
            //-             use(xlink:href='img/icons.svg#icon-search')
            //-     input.nav__search-input(type='text' placeholder='Search tours')
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user
        -if (user)
            
            svg.cart(viewBox="0 0 15 15")
                use(xlink:href=`/img/icons.svg#icon-shopping-cart`)
            a.size-cart(href="/mycart")
                span= user.cart.length
            a.nav__el.nav__el--logout LogOut
            a.nav__el(href='/me')
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`${user.name}`)
                span.user--name= user.name.split(' ')[0]
            
                
        -else
            a.nav__el(href='/login') login 
            a.nav__el.nav__el--cta(href="/signup") SignUp
        
        